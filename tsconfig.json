{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "types": [
      "react",
      "react-dom"
    ]
  },
  "include": [
    "env.d.ts",
    "App.tsx",
    "index.tsx",
    "types.ts",
    "constants.ts",
    "components",
    "services"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
